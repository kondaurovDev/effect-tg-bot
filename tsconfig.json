{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "#/*": ["./src/*"],
      "#scripts/*": ["./scripts/*"],
    }
  }
}
